{
    "name": "ts-backend-production-template",
    "version": "1.0.0",
    "description": "backendtypescript setup",
    "main": "server.js",
    "scripts": {
        "dist": "npx tsc",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "prepare": "husky",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "lint": "eslint ",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "lint:fix": "eslint --fix"
    },
    "author": "",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.27.0",
        "@types/express": "^5.0.2",
        "@types/node": "^22.15.21",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.0.0",
        "nodemon": "^3.1.10",
        "prettier": "3.5.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv-flow": "^4.1.0",
        "express": "^5.1.0"
    }
}
